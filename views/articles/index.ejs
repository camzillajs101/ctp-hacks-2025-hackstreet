<%- include('../partials/header') %>

<h1><%= title %></h1>

<div class="closet-container">
  <div class="articles-section">
    <h2>All Clothing Articles</h2>
    <table class="clothing-table">
      <tr>
        <th>Brand</th>
        <th>Category</th>
        <th>Color</th>
        <th>Pattern</th>
        <th>Actions</th>
      </tr>
      <% for (article of articles) { %>
        <tr data-article-id="<%= article.id %>">
          <td><%= article.brand %></td>
          <td><%= article.category %></td>
          <td><%= article.color %></td>
          <td><%= article.pattern %></td>
          <td>
            <button class="save-btn" 
                    data-id="<%= article.id %>" 
                    onclick="saveArticle(this)">
              Save
            </button>
          </td>
        </tr>
      <% } %>
    </table>
  </div>

  <div class="saved-articles-section">
    <h2>Saved Articles</h2>
    <div id="saved-articles-container">
      <table id="saved-articles-table" class="clothing-table">
        <tr>
          <th>Brand</th>
          <th>Category</th>
          <th>Color</th>
          <th>Pattern</th>
          <th>Actions</th>
        </tr>
        <tbody id="saved-articles-body">
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="navigation">
  <a href="/articles/new">Add to your closet...</a><br>
</div>

<script src="/js/articles.js"></script>

<%- include('../partials/footer') %>